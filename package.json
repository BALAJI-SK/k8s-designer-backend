{
  "name": "k8s-designer-backend",
  "version": "1.0.0",
  "description": "Standalone Backend Boilerplate using NodeJS and Express",
  "main": "index.js",
  "scripts": {
    "dev": "node index.js",
    "test": "npx jest",
    "test-coverage": "concurrently 'npx jest tests' 'npx jest --coverage'",
    "start": "nodemon index.js",
    "linting": "npx eslint --fix .",
    "nodemon": "nodemon index.js",
    "prod:install": "NODE_ENV=production npm install ",
    "db:down": "npx prisma migrate reset",
    "db:up": "npx prisma migrate dev"
  },
  "nodemonConfig": {
    "ignore": [
      "tmp/"
    ]
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  },
  "keywords": [
    "microservice",
    "backend",
    "NodeJS",
    "Express"
  ],
  "author": "",
  "license": "ISC",
  "bin": {
    "k8s-designer": "cli/cli.js"
  },
  "devDependencies": {
    "@types/node": "^18.13.0",
    "concurrently": "^7.6.0",
    "eslint": "^8.33.0",
    "jest": "^29.4.3",
    "mock-fs": "^5.2.0",
    "nodemon": "^2.0.21",
    "prisma": "^4.10.1",
    "rimraf": "^4.1.2",
    "sinon": "^15.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@prisma/client": "^4.10.1",
    "archiver": "^5.3.1",
    "bcrypt": "^5.1.0",
    "cli": "^1.0.1",
    "cli-spinner": "^0.2.10",
    "colors": "^1.4.0",
    "cors": "^2.8.5",
    "dockerode": "^3.3.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "fs-extra": "^11.1.0",
    "hygen": "^6.2.11",
    "joi": "^17.8.3",
    "jsonwebtoken": "^9.0.0",
    "mustache": "^4.2.0",
    "nodemailer": "^6.9.1",
    "path": "^0.12.7"
  }
}
